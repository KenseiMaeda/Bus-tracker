{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true,

    "rewrites": [
      {
        "source": "/plateau",
        "destination": "/Plateau-View/index.html"
      },
      {
        "source": "/rssi",
        "destination": "/RSSI-Measurement/index.html"
      },
      {
        "source": "/transit",
        "destination": "/Transit-Logger/index.html"
      },
      {
        "source": "/",
        "destination": "/Plateau-View/index.html"
      }
    ]
  }
}
